{
    "name": "my-money",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "concurrently \"pnpm --filter my-money-api dev\" \"pnpm --filter my-money-web dev\"",
        "build": "pnpm --filter my-money-api build && pnpm --filter my-money-web build",
        "start": "pnpm --filter my-money-api start:prod",
        "test": "pnpm --recursive test",
        "lint": "pnpm --recursive lint",
        "db:migrate": "node db/migrate.js",
        "db:migrate:up": "node db/migrate.js up",
        "db:migrate:down": "node db/migrate.js down",
        "db:migrate:status": "node db/migrate.js status"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "dependencies": {
        "mysql2": "^3.15.3"
    }
}