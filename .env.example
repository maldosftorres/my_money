# ==============================================================================
# üîß MyMoney Application - Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files to version control

# ==============================================================================
# üóÑÔ∏è Database Configuration
# ==============================================================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=my_money

# Connection Pool Settings
DB_CONNECTION_LIMIT=10
DB_TIMEOUT=60000

# ==============================================================================
# üåê API Configuration
# ==============================================================================
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ==============================================================================
# üîê Security & Authentication
# ==============================================================================
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
SALT_ROUNDS=12

# ==============================================================================
# üñ•Ô∏è Frontend Configuration
# ==============================================================================
VITE_API_URL=http://localhost:3001/api/v1
VITE_APP_NAME=MyMoney
VITE_APP_VERSION=1.0.0

# ==============================================================================
# üìß Email Configuration (Optional)
# ==============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@mymoney.com

# ==============================================================================
# üîç Logging & Monitoring
# ==============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_SQL_LOGGING=false
SLOW_QUERY_THRESHOLD=1000

# ==============================================================================
# ‚òÅÔ∏è Cloud Services (Optional)
# ==============================================================================
# AWS S3 for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=mymoney-uploads
AWS_REGION=us-east-1

# ==============================================================================
# üìä Analytics & Reporting (Optional)
# ==============================================================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn

# ==============================================================================
# üí≥ Payment Gateway (Future)
# ==============================================================================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ==============================================================================
# üîÑ Background Jobs (Future)
# ==============================================================================
REDIS_URL=redis://localhost:6379
QUEUE_NAME=mymoney_jobs